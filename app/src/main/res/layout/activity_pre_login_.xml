<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.pre_login_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playband"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="23dp"
            android:textStyle="bold"
            android:textColor="#7B52AB"
            ></TextView>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginTop="100dp"
                android:layout_width="wrap_content"
                android:src="@drawable/dark_logo"
                android:layout_height="wrap_content"></androidx.appcompat.widget.AppCompatImageView>
            <TextView
                android:textAlignment="center"
                android:textSize="33dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:text="Playband"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:textAlignment="center"
                android:textSize="25dp"
                android:text="MP3 Player"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"></TextView>
            <TextView
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#545454"
                android:text="Check your email and confirm \n your registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"></TextView>
            <Button
                android:onClick="onClickLogin"
                android:background="@drawable/button_gradient"
                android:textColor="#ffffff"
                android:text="LOGIN"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content">

            </Button>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>