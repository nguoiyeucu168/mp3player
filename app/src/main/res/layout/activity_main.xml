<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@drawable/background_welcome">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:background="#A27B52AB"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:src="@drawable/logo"
            android:layout_height="wrap_content"></androidx.appcompat.widget.AppCompatImageView>
        <TextView
            android:text="Playband"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:text="UI Kit"
            android:layout_marginBottom="80dp"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:textAllCaps="false"
            android:text="Free Music"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_marginBottom="40dp"
            android:textAllCaps="false"
            android:text="Application"
            android:textColor="#ffffff"
            android:textSize="35dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
        <Button
            android:onClick="onClickGetStarted"
            android:background="@drawable/radius_button_white"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="GET STARTED"
            android:layout_marginBottom="200dp">
        </Button>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="0.0">
            <Button
                android:onClick="onClickSignIn"
                android:textAllCaps="false"
                android:text="Sign In"
                android:textSize="30dp"
                android:background="#ffffff"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:layout_height="110dp"
                ></Button>
            <Button
                android:onClick="onClickSignUp"
                android:textAllCaps="false"
                android:text="Sign Up"
                android:textSize="30dp"
                android:textColor="#7B52AB"
                android:background="@drawable/button_left_border"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:layout_height="110dp"></Button>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>